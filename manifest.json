{
  "manifest_version": 3,
  "name": "Bookmark Manager",
  "version": "1.2",
  "description": "Add new bookmarks via popup, view and manage them in a side panel, with daily reminders.",
  "icons": { 
    "16": "icons/icon16.ico",
    "48": "icons/icon48.ico",
    "128": "icons/icon128.ico"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": { 
      "16": "icons/icon16.ico",
      "48": "icons/icon48.ico",
      "128": "icons/icon128.ico"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "notifications",
    "alarms"
  ],
  "host_permissions": ["<all_urls>"]
}